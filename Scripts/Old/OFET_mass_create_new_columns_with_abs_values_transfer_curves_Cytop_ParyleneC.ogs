// This script is used in transfer curves taken with the low noise rig in two drain voltages. It loops over all the workbooks in the folder and creates four new columns, one pair for the abs(Id) and one pair for abs(Ig).
[Main]

doc -ef LB { // loop over all workbooks in folder
	wks.colwidth = 8;// set all col width to 8
	string sheetname$=wks.longname$; //get the name of worksheet
	string a=sheetname.GetToken(14,"_")$; // get the string "T" or "O", which shows if the curve is a transfer or output curve
	%A=sheetname.GetToken(12,"_")$; // get the string, which shows the number of days
	i=a.Find('O');
	page.title = 1;  // Let the workbook title shows Long Name only (1 = Long Name, 2 = short name, 3 = both)
	

if(exist(%H,2)==0) //not a workbook, must be a matrix
		continue;
	else 
		if (i == 1) continue;	// if this is an output curve then break		
			else wks.ncols=11; // set total column number to 11
				// Write long name, units, comments, and parameter1 of column B
				col(H)[L]$ = "Id (Vd=-1.0V)"; // Long name
				col(H)[U]$ = A; // Units
				col(H)[O]$ = "abs(col(D))";
				col(I)[L]$ = "Id (Vd=-5.0V)"; // Long name
				col(I)[U]$ = A; // Units
				col(I)[O]$ = "abs(col(E))";
				col(J)[L]$ = "Ig (Vd=-1.0V)"; // Long name
				col(J)[U]$ = A; // Units
				col(J)[O]$ = "abs(col(F))";
				col(K)[L]$ = "Ig (Vd=-5.0V)"; // Long name
				col(K)[U]$ = A; // Units
				col(K)[O]$ = "abs(col(G))";
				switch (%A) // Case study
					{
						case "air": // If the string is "air", write "air in the comment field
							col(H)[C]$ = "Air"; // Comment field (graph legend)
							break;
						
						case "1": // If the number is 1, use single form
							col(H)[C]$ = "Saline solution %A day"; // Comment field (graph legend)
							break;
						
						default: // For all other numbers, use plural form
							col(H)[C]$ = "Saline solution %A days"; // Comment field (graph legend)
							break;
					}
				col(I)[C]$ = col(H)[C]$; // Comment field (graph legend)
				col(J)[C]$ = col(H)[C]$; // Comment field (graph legend)
				col(K)[C]$ = col(H)[C]$; // Comment field (graph legend)
}